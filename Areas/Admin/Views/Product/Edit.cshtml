@model Clothing_boutique_web.Areas.Admin.Models.Product;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Update detail product</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="post" asp-area="admin" asp-controller="product" asp-action="edit">
        <div class="box-body">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text"  multiple = "true" asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Detail">Detail</label>
            <input type="text" multiple = "true" asp-for="Detail" class="form-control" >
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label>Category</label>
          <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
            <option>Select Category</option>
            <span asp-validation-for="CategoryId" class="text-danger" />
          </select>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="number" asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quaity">Quaity</label>
            <input type="number" asp-for="Quaity" class="form-control">
            <span asp-validation-for="Quaity" class="text-danger"></span>
        </div>
        <div class="checkbox">
            <label asp-for="Featured">
            <input asp-for="Featured" type="checkbox" value="true"> Status
            </label>
        </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
        <button type="submit" class="btn btn-primary">Update</button>
        <button  class="btn btn-danger"><a style="color:aliceblue" asp-area="admin" asp-action="index" asp-controller="product">Back to list</a></button>
        </div>
    </form>
</div>

