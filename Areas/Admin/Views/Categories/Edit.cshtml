@model Clothing_boutique_web.Areas.Admin.Models.Category;
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Category</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="post" asp-area="admin" asp-controller="categories" asp-action="edit">
        <div class="box-body">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="checkbox">
            <label asp-for="Status">
            <input asp-for="Status" type="checkbox">Status
            </label>
        </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
        <button type="submit" class="btn btn-primary">Update</button>
        <button  class="btn btn-danger"><a style="color:aliceblue" asp-area="admin" asp-action="index" asp-controller="categories">Back to list</a></button>
        <input type="hidden" asp-for="Id" class="form-control">
        </div>
    </form>
</div>

